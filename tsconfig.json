{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "jquery",
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "bpui.js": [
        "src/bpui/bpui.ts"
      ],
      "bpui.js.src": [
        "node_modules/bpui.js/src/index.ts"
      ],
      "@bpui/*": [
        "@bpui/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "target",
    "public",
    "dist"
  ]
}